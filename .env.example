# Microsoft 365 Authentication
# Get these from Azure Portal -> App registrations
CLIENT_ID=
TENANT_ID=
CLIENT_SECRET=
TARGET_EMAIL=

# Service Configuration
CHECK_INTERVAL_SECONDS=30
MAX_EMAILS_PER_RUN=25
VOICEMAIL_SENDER=unityconnection@hosted-comm-service.a1.net

# Whisper Model Configuration
# Options: tiny, base, small, medium, large
# medium requires ~8GB RAM
WHISPER_MODEL=medium
TRANSCRIPTION_MARKER=--- AUTOMATISCHES TRANSKRIPT ---

# Logging
LOG_LEVEL=INFO

# Docker memory limit
MEMORY_LIMIT=12g

# Legacy (not used, kept for compatibility)
START_DATE=2024-01-01T00:00:00Z
